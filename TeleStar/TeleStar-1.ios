conf t
interface eth0
description ***TELESTAR-3 UPLINK***
ip address 10.17.0.9/30
bandwidth 100

interface eth1
description ***TELESTAR-2 UPLINK***
ip address 10.17.0.1/30
bandwidth 1000

interface eth2
description ***KUNDE-B1 UPLINK***
ip address 10.17.1.1/30
bandwidth 1000

interface eth3
description ***NEXTTEL-1 UPLINK***
ip address 10.16.1.10/30
bandwidth 1000

interface lo
description ***LOOPBACK***
ip address 10.17.2.1/32

no router ospf 
router ospf 
ospf router-id 10.17.2.1
network 10.17.0.0/30 area 0
network 10.17.0.8/30 area 0

! BGP configuration
no router bgp 4010
router bgp 4010
 neighbor 10.17.1.2 remote-as 64497
 neighbor 10.16.1.9 remote-as 20001
 !
 address-family ipv4 unicast
  network 10.17.1.0/30
  network 10.16.1.8/30
  redistribute connected
  neighbor 10.17.1.2 prefix-list ALLOW_ALL in
  neighbor 10.17.1.2 prefix-list ALLOW_ALL out
  neighbor 10.16.1.9 prefix-list ALLOW_ALL in
  neighbor 10.16.1.9 prefix-list ALLOW_ALL out
 exit-address-family
exit

! Prefix list configuration
ip prefix-list ALLOW_ALL seq 5 permit 0.0.0.0/0 le 32
!
end

! no router bgp 4010
! router bgp 4010
! neighbor 10.17.1.2 remote-as 64497
! neighbor 10.16.1.9 remote-as 20001
! ! address-family ipv4
! neighbor 10.16.1.9 prefix-list ALLOW_ALL in
! neighbor 10.16.1.9 prefix-list ALLOW_ALL out

! network 10.17.1.0 mask 255.255.255.252
! network 10.16.1.8 mask 255.255.255.252
! redistribute connected
! end

